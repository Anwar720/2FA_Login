    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <title>Two-Factor-Authentication</title>
</head>
<body>
    <div class="container">
        <form id='form' class="login auth" method="post" action="/authentication">
            <h2>Enter your Two-Factor Authentication Code </h2>
            
            <ul>
                <input type="tel" pattern="[0-9]" name='digit' maxlength="1" class="digits" placeholder="*" autocomplete="off" required>
                <input type="tel" pattern="[0-9]" name='digit' maxlength="1" class="digits" placeholder="*" autocomplete="off" required>
                <input type="tel" pattern="[0-9]" name='digit' maxlength="1" class="digits" placeholder="*" autocomplete="off" required>
                <input type="tel" pattern="[0-9]" name='digit' maxlength="1" class="digits" placeholder="*" autocomplete="off" required>
                <input type="tel" pattern="[0-9]" name='digit' maxlength="1" class="digits" placeholder="*" autocomplete="off" required>
                <input type="tel" pattern="[0-9]" name='digit' maxlength="1" class="digits" placeholder="*" autocomplete="off" required>
            </ul>
                <% if(error) {%>
                    <p class="error"><%=error %></p>
                <% }  %>
            <input type="submit"  id="submit"></input>
            
        
        </form>
        
    </div>
    <script src="js/auth.js"></script>
</body>
</html>